{
    "manifest_version": 3,
    "name": "EcoPrompt",
    "version": "1.0",
    "description": "Track and optimize LLM prompt efficiency in real time.",
    "permissions": ["storage", "scripting", "activeTab", "notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://chat.openai.com/*",
          "https://claude.ai/*",
          "https://chatgpt.com/*"
        ],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "eco.html",
      "default_icon": "catx.png"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "happy1.png",
          "happy2.png",
          "lesshappy3.png",
          "lesshappy4.png",
          "sad5.png",
          "sad6.png"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }
  